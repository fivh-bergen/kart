<script>
  import { isLoggedIn, authReady } from "osm-api";
  import { configureOsmApi } from "../../config";

  if (new URLSearchParams(location.search).has("code")) {
    new BroadcastChannel("osm-api-auth-complete").postMessage(location.href);
    window.close();
  }

  configureOsmApi();

  authReady.then(() => {
    alert("Auth is ready! Logged in: " + isLoggedIn());
  });
</script>

