---
import * as Icon from "@astropub/icons";
---

<button id="logout-badge" class="info-badge" type="button">
  <span class="info-badge-text">Logg ut</span>
  <Icon.Exit size="1.5rem" />
</button>

<script>
  import { logout } from "osm-api";
  import {
    $isOsmLoggedIn,
    initializeOsmAuthStore,
    syncOsmAuthState,
  } from "../store/auth";

  const badge = document.getElementById("logout-badge");

  initializeOsmAuthStore();
  void syncOsmAuthState();

  if (badge) {
    $isOsmLoggedIn.listen((loggedIn) => {
      badge.style.display = loggedIn ? "flex" : "none";
    });

    badge.addEventListener("click", async () => {
      await logout();
      void syncOsmAuthState();
    });
  }
</script>

<style>
  .info-badge {
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: white;
    border-radius: 0.5rem;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    cursor: pointer;
    padding-left: 0.5rem;
    padding-right: 0.5rem;
    padding-top: 0.25rem;
    padding-bottom: 0.25rem;
    gap: 0.5rem;
    border: none;
    height: fit-content;
    min-height: 2rem;
    display: none;
  }

  .info-badge-text {
    font-size: 1rem;
    font-family: inherit;
  }

  @media screen and (max-width: 968px) {
    .info-badge-text {
      display: none;
    }

    .info-badge {
      border-radius: 50%;
      padding: 0.25rem;
      min-width: 2rem;
      min-height: 2rem;
    }
  }
</style>
