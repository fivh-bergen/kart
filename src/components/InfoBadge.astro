---
import * as Icon from "@astropub/icons";
---

<button id="info-badge" class="info-badge">
  <div class="info-badge-text">Om tjenesten</div>
  <Icon.QuestionMarkCircled size="1.5rem" />
</button>

<script>
  import { toggleAboutPanel } from "../store/feature";
  const badge = document.getElementById("info-badge");
  if (badge) {
    badge.addEventListener("click", () => {
      toggleAboutPanel();
    });
  }
</script>

<style>
  .info-badge {
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: white;
    border-radius: 0.5rem;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    cursor: pointer;
    padding: 0.5rem;
    gap: 0.5rem;
    border: none;
    margin-left: auto;
  }

  .info-badge-text {
    font-size: 1rem;
    font-family: inherit;
  }

  @media screen and (max-width: 968px) {
    .info-badge-text {
      display: none;
    }

    .info-badge {
      border-radius: 50%;
      padding: 0.25rem;
    }
  }
</style>
